<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
     >
    <data>
        <variable
            name="event"
            type="android.view.View.OnClickListener"/>
        
    </data>
    

<LinearLayout 
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:background="@color/color_White"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/company_message"
            android:onClick="@{event}"
            android:background="@drawable/setting_line_shape"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/dp30.5"
                android:layout_height="@dimen/dp36.5"
                style="@style/company_message_items_image"
                android:background="@mipmap/company_message"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/company_message_items_text"
                android:text="企业信息"
                />
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:onClick="@{event}"
            android:background="@drawable/setting_line_shape"
            android:id="@+id/company_quthentication"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/dp30.5"
                android:layout_height="@dimen/dp36.5"
                style="@style/company_message_items_image"
                android:background="@mipmap/company_confirm"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/company_message_items_text"
                android:text="企业认证"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/setting_line_shape"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/dp30.5"
                android:layout_height="@dimen/dp36.5"
                style="@style/company_message_items_image"
                android:background="@mipmap/company_trees"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/company_message_items_text"
                android:text="组织架构"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/setting_line_shape"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp30.5"
                android:layout_height="@dimen/dp36.5"
                style="@style/company_message_items_image"
                android:src="@mipmap/job_competence"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/company_message_items_text"
                android:text="职务权限"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout></layout>