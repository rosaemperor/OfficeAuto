<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<data>
    <variable
        name="event"
        type="android.view.View.OnClickListener"/>
</data>
<LinearLayout
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp12"
    android:paddingRight="@dimen/dp12"
    android:paddingTop="@dimen/dp33"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp24"
        android:onClick="@{event}"
        android:id="@+id/type_setting"
        android:background="@color/colorAccent"
        android:paddingBottom="@dimen/dp24"
        android:paddingLeft="@dimen/dp24">
        <com.shiyidaoAndroidApp.widget.CircleImageView
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp48"
            android:id="@+id/type_header"
            android:src="@mipmap/approvial"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp14.5"
            android:layout_toRightOf="@+id/type_header"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp16"
            android:textColor="@color/text_color_white"
            android:text="@string/type_setting"
           />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp13"

                android:textColor="@color/function_text_color_english"
                android:text="@string/type_setting1"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp24"
        android:id="@+id/progress_setting"
        android:onClick="@{event}"
        android:layout_marginTop="@dimen/dp25"
        android:background="@color/process_settings_background"
        android:paddingBottom="@dimen/dp24"
        android:paddingLeft="@dimen/dp24">
        <com.shiyidaoAndroidApp.widget.CircleImageView
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp48"
            android:id="@+id/type_header2"
            android:src="@mipmap/approvial"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp14.5"
            android:layout_toRightOf="@+id/type_header2"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp16"
                android:textColor="@color/text_color_white"
                android:text="@string/process_setting"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp13"

                android:textColor="@color/function_text_color_english"
                android:text="@string/process_setting2"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
</layout>