<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextStyle">@style/hindText_EditText</item>
    </style>
    <!--登录页面-->

    <style name="login_and_reginster">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp17</item>

        <item name="android:paddingTop">@dimen/dp18</item>
        <item name="android:paddingBottom">@dimen/dp17.5</item>
    </style>
    <style name="hindText_EditText" parent="android:Widget.EditText">
        <item name="android:drawablePadding">@dimen/dp15</item>
        <item name="android:background">@null</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textColorHint">@color/hintTextColot</item>
        <item name="android:textSize">@dimen/text_hint_15sp</item>
    </style>
    <style name="reginst_hindText_EditText">
       <item name="android:paddingBottom">@dimen/dp16</item>
        <item name="android:paddingTop">@dimen/dp16</item>
        <item name="android:paddingLeft">@dimen/dp12</item>
        <item name="android:background">@color/text_color_white</item>
        <item name="android:layout_marginTop">@dimen/dp0.5</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
        <item name="android:textColor">@color/reginst_hint_color</item>
        <item name="android:textColorHint">@color/reginst_hint_color</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>
  <style name="center_text_padding">
      <item name="android:gravity">center</item>
      <item name="android:textColor">#1D1D26</item>
      <item name="android:textSize">@dimen/sp13</item>
      <item name="android:padding">@dimen/dp16.5</item>
  </style>
    <style name="resetpassword_edittext">
        <item name="android:padding">@dimen/dp15</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">#80CCCCCC</item>
        <item name="android:textSize">@dimen/sp15</item>
    </style>
    <style name="apps_imageitem_style">
        <item name="android:layout_marginRight">@dimen/dp40.5</item>
        <item name="android:layout_marginLeft">@dimen/dp40.5</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/dp29.5</item>
    </style>
    <style name="apps_textitem_style">
        <item name="android:layout_marginTop">@dimen/dp11.5</item>
        <item name="android:layout_marginBottom">@dimen/dp19</item>

        <item name="android:layout_gravity">center_horizontal</item>

        <item name="android:textColor">@color/apps_text_color</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>
    <style name="company_message_items_image">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/dp30.5</item>
    </style>
    <style name="company_message_items_text">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">15.6dp</item>
        <item name="android:layout_marginBottom">26.5dp</item>
        <item name="android:textColor">@color/company_message_text_color</item>
    </style>
    <!--圆形头像自定属性-->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>
    <style name="corrdination_items_text">
        <item name="android:textSize">@dimen/sp13</item>
        <item name="android:paddingBottom">@dimen/dp16.5</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/dp16.5</item>
    </style>
    <!--审批。新增审批-->
    <style name="new_approvial_style">
        <item name="android:ems">4</item>
        <item name="android:textSize">@dimen/sp13</item>
        <item name="android:textColor">@color/notice_items_offText</item>
    </style>
    <style name="new_approvial_text2_style">
        <item name="android:textSize">@dimen/sp13</item>
        <item name="android:textColor">@color/color_black_light</item>
    </style>
    <style name="new_approvial_bottm_text">
        <item name="android:textSize">@dimen/sp17</item>
        <item name="android:paddingTop">@dimen/dp11.5</item>
        <item name="android:paddingBottom">@dimen/dp11.5</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="bottom_button">
        <item name="android:paddingTop">@dimen/dp16</item>
        <item name="android:paddingBottom">@dimen/dp16</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textSize">@dimen/sp17</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="layout_divider_line">

        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">end</item>
        <item name="android:divider">@drawable/layout_divider_line</item>

    </style>
    <style name="message_manager_items">
        <item name="android:background">@color/color_White</item>
        <item name="android:paddingLeft">@dimen/dp12</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">@dimen/dp12</item>
        <item name="android:paddingBottom">@dimen/dp15</item>
        <item name="android:paddingTop">@dimen/dp15</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:showDividers">end</item>

        <item name="android:divider">@drawable/layout_divider_line</item>
        
    </style>

    <style name="text_messagemangeer_left_style">
        <item name="android:textColor">@color/color_black_light</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>
    <style name="text_messagemangeer_right_style">
        <item name="android:textColor">@color/color_fray838</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>
    <style name="layout_message_items">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/dp12</item>
        <item name="android:paddingRight">@dimen/dp12</item>
        <item name="android:paddingBottom">@dimen/dp18</item>
        <item name="android:paddingTop">@dimen/dp18</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="message_items_edittext">
        <item name="android:textColorHint">@color/color_1dp_line</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:layout_marginLeft">@dimen/dp30.5</item>
        <item name="android:background">@null</item>
    </style>
    <style name="message_items_textview">
        <item name="android:textColorHint">@color/color_black_light</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:ems">4</item>

    </style>
    <!--企业信息-->
    <style name="company_message_min_text_items">
        <item name="android:paddingLeft">@dimen/dp12</item>
        <item name="android:textSize">@dimen/sp11</item>
        <item name="android:textColor">@color/reginst_hint_color</item>
    </style>
    <!--我的审批-->
    <style name="my_approvial_lefttext_style">
        <item name="android:textColor">@color/textcolor_myapprovial_top</item>
        <item name="android:textSize">@dimen/sp13</item>
    </style>
    <!--新建任务items的layout-->
   <style name="new_task_item_layout">
       <item name="android:paddingBottom">@dimen/dp12</item>
       <item name="android:paddingLeft">@dimen/dp12</item>
       <item name="android:paddingRight">@dimen/dp12</item>
       <item name="android:paddingTop">@dimen/dp25</item>
   </style>
</resources>
